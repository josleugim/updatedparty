@model UpdatedParty.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}
<h2 style="color: yellow">
    Log In</h2>
<p style="font-family: HelveticaNeue_Regular">
    Por favor ingresa tu nombre de usuario y contraseña. @Html.ActionLink("Registra tu bar", "Register", null, new { style = "color: yellow" })
    si no tienes una cuenta.
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Error en el login. Ingresa tus datos correctamente e inténtalo de nuevo.", new { style = "color: red; font-family: HelveticaNeue_Regular" })
@using (Html.BeginForm())
{
    <div class="LogInWrapper">
        <fieldset>
            <legend>Información</legend>
            <div class="editor-label" style="position: relative">
                @Html.LabelFor(m => m.UserEmail) :
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserEmail, new { style = "width: 200px" })
                @Html.ValidationMessageFor(m => m.UserEmail)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Password) :
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { style = "width: 200px" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            @*<div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>*@
            <p>
                <input type="submit" value="Entrar" />
            </p>
        </fieldset>
    </div>
}
