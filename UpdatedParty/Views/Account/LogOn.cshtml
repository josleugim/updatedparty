@model UpdatedParty.Models.LogOnModel
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Articles.cshtml";
}
<h2 style="color: yellow">
    Iniciar sesión</h2>
<p>
    Por favor ingresa tu nombre de usuario y contraseña.
</p>
<p>@Html.ActionLink("Registra tu bar", "Register", null, new { style = "color: yellow" })
    si no tienes una cuenta.</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Error al iniciar sesión. Ingresa tus datos correctamente e inténtalo de nuevo.")
@using (Html.BeginForm())
{
    <div class="LogInWrapper">
        <fieldset>
            <legend>Información</legend>
            <div class="editor-label" style="position: relative">
                @Html.LabelFor(m => m.UserEmail) :
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserEmail, new { style = "width: 250px" })
                @Html.ValidationMessageFor(m => m.UserEmail)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Password) :
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { style = "width: 180px" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <p>
                <input type="image" src="../../Content/images/Entrar.png" value="Entrar" />
            </p>
        </fieldset>
    </div>
}
